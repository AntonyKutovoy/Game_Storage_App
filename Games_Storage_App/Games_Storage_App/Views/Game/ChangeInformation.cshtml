@model Games_Storage_App.Models.GameViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-controller="Game" asp-action="GetGames" class="list-group-item list-group-item-action">Список игр</a>
            <a asp-controller="Genre" asp-action="GetGenres" class="list-group-item list-group-item-action">Список жанров</a>
            <a class="list-group-item list-group-item-action">Поиск по жанрам</a>
        </div>
    </div>
    <div class="col-md-9 my-4">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h4>Редактирование данных</h4>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form asp-action="ChangeInformation">
                        <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-4 col-form-label">Название</label>
                            <div class="col-8">
                                <input asp-for="Name" placeholder="Название" class="form-control here" type="text">
                                <span asp-validation-for="Name" class="sr-only"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Developer" class="col-4 col-form-label">Разработчик</label>
                            <div class="col-8">
                                <input asp-for="Developer" placeholder="Разработчик" class="form-control here" type="text">
                                <span asp-validation-for="Developer" class="sr-only"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-4 col-8 text-right">
                                <button name="submit" type="submit" class="btn btn-info">Сохранить</button>
                            </div>
                        </div>
                    </form>
                    <a class="text-info" asp-action="GetGame" asp-route-id="@Model.Id"><i class="bi bi-arrow-left mr-2 text-info"></i>Назад</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>