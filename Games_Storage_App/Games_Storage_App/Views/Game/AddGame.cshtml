@model Games_Storage_App.Models.GameWithAllGenresViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-controller="Game" asp-action="GetGames" class="list-group-item list-group-item-action">Список игр</a>
            <a asp-controller="Genre" asp-action="GetGenres" class="list-group-item list-group-item-action">Список жанров</a>
        </div>
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Добавление новой игры</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddGame">
                            <div asp-validation-summary="All" class="text-danger offset-4 col-8"></div>
                            <div class="form-group row">
                                <label asp-for="@Model.Game.Name" class="col-4 col-form-label">Название</label>
                                <div class="col-8">
                                    <input asp-for="@Model.Game.Name" placeholder="Название" class="form-control here" type="text">
                                    <span asp-validation-for="@Model.Game.Name" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="@Model.Game.Developer" class="col-4 col-form-label">Разработчик</label>
                                <div class="col-8">
                                    <input asp-for="@Model.Game.Developer" placeholder="Разработчик" class="form-control here" type="text">
                                    <span asp-validation-for="@Model.Game.Developer" class="sr-only"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-4">
                                    Жанр
                                </div>
                                <div class="col-8">
                                    @foreach (var genre in Model.Genres)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="genreid" id="genreid" value="@genre.Id">
                                            <label class="form-check-label" for="genreid">
                                                @genre.Name
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8 text-right">
                                    <button name="submit" type="submit" class="btn btn-info">Сохранить</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>