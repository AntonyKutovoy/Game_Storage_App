@model Games_Storage_App.Models.GameViewModel

<div class="row">
    <div class="col-md-3 my-4">
        <div class="list-group ">
            <a asp-action="GetGames" class="list-group-item list-group-item-action">Список игр</a>
            <a asp-action="GetGenres" class="list-group-item list-group-item-action">Список жанров</a>
            <a class="list-group-item list-group-item-action">Поиск по жанрам</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card my-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Жанры игры @Model.Name</h4>
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @for (int j = 0; j < Model.Genres.Count; j++)
                        {
                            var gameGenre = Model.Genres[j];
                            <div class="form-group row">
                                <div class="col-4">
                                    @gameGenre.Genre.Name
                                </div>
                                <div class="col-8">
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteGameGenre" asp-route-gameGenreId="@gameGenre.Id" asp-route-gameId="@Model.Id" role="button">Убрать</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <a class="text-info" asp-action="GetGame" asp-route-id="@Model.Id"><i class="bi bi-arrow-left mr-2 text-info"></i>Назад</a>
            </div>
        </div>
    </div>
</div>